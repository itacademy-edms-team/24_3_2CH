@page
@model MyImageBoard.Pages.ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Error</h1>
    <p class="text-danger">An error occurred while processing your request.</p>
    <p>
        <strong>Error Code:</strong> @Model.ErrorCode
    </p>
    <p>
        <strong>Message:</strong> @Model.Message
    </p>
    <a href="/BoardsView" class="btn btn-primary">Back to Boards</a>
</div>