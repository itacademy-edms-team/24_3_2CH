@model List<ForumProject.Data.Models.SiteThread>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Удаление тредов</h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Название</th>
                            <th>Доска</th>
                            <th>Создан</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var thread in Model)
                        {
                            <tr>
                                <td>@thread.Id</td>
                                <td>@thread.Title</td>
                                <td>@thread.Board.Title</td>
                                <td>@thread.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    <form method="post" asp-page-handler="DeleteThread" asp-route-threadId="@thread.Id" onsubmit="return confirm('Вы уверены, что хотите удалить этот тред?');">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Удалить
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                Нет тредов для отображения.
            </div>
        }
    </div>
</div> 