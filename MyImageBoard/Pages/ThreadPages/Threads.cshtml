@page
@model MyImageBoard.Pages.ThreadPages.ThreadsModel
@{
    ViewData["Title"] = "All Threads";
}

<h1>All Threads</h1>

@if (Model.Threads == null || !Model.Threads.Any())
{
    <p>No threads found.</p>
}
else
{
    <div class="threads-list">
        @foreach (var thread in Model.Threads)
        {
            <div class="thread-item">
                <h2>@thread.Title</h2>
                <p>@thread.Text</p>

                @if (thread.Images != null && thread.Images.Any())
                {
                    <h3>Images:</h3>
                    <div class="image-gallery">
                        @foreach (var image in thread.Images)
                        {
                            <img src="@image.ImageUrl" alt="Thread image" class="thread-image" />
                        }
                    </div>
                }

                <a href="/ThreadPages/Thread/@thread.Id" class="btn btn-primary" style="margin-top: 10px;">В тред</a>
            </div>
        }
    </div>
}

<style>
    .threads-list {
        margin-top: 20px;
    }

    .thread-item {
        border: 1px solid #ddd;
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 5px;
    }

    .image-gallery {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 10px;
    }

    .thread-image {
        max-width: 200px;
        height: auto;
        border: 1px solid #ccc;
        border-radius: 3px;
    }
</style>