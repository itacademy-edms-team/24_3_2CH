@page
@model MyImageBoard.Pages.ThreadPages.ThreadsModel
@{
    ViewData["Title"] = "All Threads";
}

<h1>All Threads</h1>

@if (Model.Threads == null || !Model.Threads.Any())
{
    <p>No threads found.</p>
}
else
{
    <div class="threads-list">
        @foreach (var thread in Model.Threads)
        {
            <div class="thread-item">
                <h2>@thread.Title</h2>
                <p>@thread.Text</p>

                @if (thread.Images != null && thread.Images.Any())
                {
                    <h3>Images:</h3>
                    <div class="image-gallery">
                        @foreach (var image in thread.Images)
                        {
                            <img src="@image.ImageUrl" alt="Thread image" class="thread-image" data-bs-toggle="modal" data-bs-target="#imageModal" data-bs-image="@image.ImageUrl" />
                        }
                    </div>
                }

                <a href="/ThreadPages/Thread/@thread.Id" class="btn btn-primary" style="margin-top: 10px;">В тред</a>
            </div>
        }
    </div>
}

<!-- Модальное окно Bootstrap -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <img src="" id="modalImage" class="modal-image" alt="Full screen image" />
            </div>
        </div>
    </div>
</div>

<style>
    .threads-list {
        margin-top: 20px;
    }

    .thread-item {
        border: 1px solid #ddd;
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 5px;
    }

    .image-gallery {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 10px;
    }

    .thread-image {
        max-width: 200px;
        height: auto;
        border: 1px solid #ccc;
        border-radius: 3px;
        cursor: pointer;
    }

    .modal-dialog {
        max-width: none; /* Убираем фиксированную ширину */
    }

    .modal-content {
        background-color: transparent; /* Прозрачный фон для минимализма */
        border: none; /* Убираем границы */
    }

    .modal-body {
        padding: 0; /* Убираем отступы */
    }

    .modal-image {
        display: block;
        max-width: 90vw; /* Максимальная ширина — 90% ширины экрана */
        max-height: 90vh; /* Максимальная высота — 90% высоты экрана */
        width: auto;
        height: auto;
        object-fit: contain; /* Сохраняем пропорции */
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const modal = document.getElementById('imageModal');
        const modalImage = document.getElementById('modalImage');
        const modalDialog = document.querySelector('#imageModal .modal-dialog');

        modal.addEventListener('show.bs.modal', (event) => {
            const imageUrl = event.relatedTarget.getAttribute('data-bs-image');
            modalImage.src = imageUrl;

            // Ждём загрузки изображения, чтобы получить его размеры
            modalImage.onload = () => {
                const imgWidth = modalImage.naturalWidth;
                const imgHeight = modalImage.naturalHeight;
                const maxWidth = window.innerWidth * 0.9; // 90% ширины экрана
                const maxHeight = window.innerHeight * 0.9; // 90% высоты экрана

                // Вычисляем размеры с сохранением пропорций
                let newWidth = imgWidth;
                let newHeight = imgHeight;
                if (newWidth > maxWidth) {
                    newHeight = (maxWidth / newWidth) * newHeight;
                    newWidth = maxWidth;
                }
                if (newHeight > maxHeight) {
                    newWidth = (maxHeight / newHeight) * newWidth;
                    newHeight = maxHeight;
                }

                // Устанавливаем размеры модального окна
                modalDialog.style.width = `${newWidth}px`;
                modalDialog.style.height = `${newHeight}px`;
            };
        });

        // Сбрасываем размеры при закрытии модального окна
        modal.addEventListener('hidden.bs.modal', () => {
            modalDialog.style.width = '';
            modalDialog.style.height = '';
        });
    });
</script>